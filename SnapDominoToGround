using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class SnapDominoToGround : MonoBehaviour {

	// Use this for initialization
	void Start () {
		
	}
	
	// Update is called once per frame
	void Update () {

        Mesh dominoMesh = GetComponent<MeshFilter>.mesh; //mesh is whatever mesh the script is attached to
        Vector3 pivotPos = // position of pivot. Couldn't find anything in docs about it
        Vector3 direction = transform.TransformDirection(down);

        float resetTransformsToZero = new Vector3(0,0,0)

        if (Physics.Raycast(pivotPos, direction))
        {
            transform.position(resetTransformsToZero);
            transform.rotation(resetTransformsToZero);
            transform.scale(resetTransformsToZero);
        }
	}
}
